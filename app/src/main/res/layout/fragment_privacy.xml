<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

    <TextView
        android:id="@+id/privacy_header"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Datenschutzinformationen"
        android:textSize="24sp"
        android:layout_marginBottom="16dp"
        />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/privacy_header">

        <TextView
            android:id="@+id/privacy_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/showPrivacyDetails"
            android:fontFamily="@font/swz721le"
            android:textSize="18sp"
            android:onClick="showPrivacyDetails"
            />
    </ScrollView>

</RelativeLayout>
