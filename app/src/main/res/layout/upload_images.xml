<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">

    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="16dp"
        android:background="#FBF315"
        android:fontFamily="@font/swz721ml">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/contest_heading"
            android:textColor="#0B0B0B"
            android:fontFamily="@font/swz721ml"
            android:textSize="25sp"
            android:gravity="center"
            android:padding="20dp"
            android:textAppearance="@style/TextAppearance.AppCompat.Large"
            android:textStyle="bold"
            android:textIsSelectable="true"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/join_win_heading"
            android:textColor="#0B0B0B"
            android:textSize="25sp"
            android:gravity="center"
            android:padding="5dp"
            android:textAppearance="@style/TextAppearance.AppCompat.Large"/>

        <WebView
            android:id="@+id/information_contest"
            android:background="#FBF315"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity ="center"
            android:layout_marginTop="8dp"/>


        <EditText
            android:id="@+id/etLegalGuardianFirstName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minHeight="48dp"
            android:hint="Vorname Erziehungsberechtigte/r"
            android:inputType="textPersonName"
            android:padding="12dp"
            android:layout_marginTop="16dp" />

        <EditText
            android:id="@+id/etLegalGuardianLastName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minHeight="48dp"
            android:hint="Name Erziehungsberechtigte/r"
            android:inputType="textPersonName"
            android:padding="12dp"
            android:layout_marginTop="16dp" />

        <EditText
            android:id="@+id/etChildFirstName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minHeight="48dp"
            android:hint="Vorname des Kindes"
            android:inputType="textPersonName"
            android:padding="12dp"
            android:layout_marginTop="16dp" />

        <EditText
            android:id="@+id/etChildAge"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minHeight="48dp"
            android:hint="Alter des Kindes"
            android:inputType="textPersonName"
            android:padding="12dp"
            android:layout_marginTop="16dp" />


        <EditText
            android:id="@+id/etEmail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minHeight="48dp"
            android:hint="E-Mail-Adresse zum Verständigen"
            android:inputType="textEmailAddress"
            android:padding="12dp"/>

        <Button
            android:id="@+id/btnUpload"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Bild auswählen" />

        <ImageView
            android:id="@+id/selectedImage"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_marginTop="16dp"
            android:visibility="gone"
            android:scaleType="centerCrop" />


        <CheckBox
            android:id="@+id/cbTerms"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Zustimmung Datenschutzerklärung"/>

        <CheckBox
            android:id="@+id/cbParticipation"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Zustimmung an der Teilnahme" />

        <CheckBox
            android:id="@+id/cbMailNotification"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Zustimmung zu Mail-Benachrichtigung" />

        <Button
            android:id="@+id/btnSubmit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="ABSENDEN"/>

    </LinearLayout>

</ScrollView>