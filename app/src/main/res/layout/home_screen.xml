<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_centerInParent="true"
    android:background="#FBF315">


    <ImageView
        android:id="@+id/sumsi_logo"
        android:layout_width="257dp"
        android:layout_height="192dp"
        android:contentDescription="@string/sumsi_logo"
        android:src="@drawable/sumsi_logo"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="75dp"
        tools:layout_editor_absoluteY="88dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/sumsi_logo"
        android:layout_centerHorizontal="true"
        android:fontFamily="@font/tt0372m"
        android:gravity="center"
        android:padding="25dp"
        android:text="@string/sumsi_welcome_message"
        android:textSize="16sp"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="299dp">

    </TextView>
</androidx.constraintlayout.widget.ConstraintLayout>