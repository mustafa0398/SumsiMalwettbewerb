<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:background="#FBF315">


    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp">

        <TextView
            android:id="@+id/welcome_message"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/swz721ml"
            android:textSize="30sp"
            android:gravity="center"
            android:padding="25dp"
            android:text="@string/welcome_message"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <ImageView
            android:id="@+id/sumsi_logo"
            android:layout_width="257dp"
            android:layout_height="192dp"
            android:contentDescription="@string/sumsi_logo"
            android:src="@drawable/sumsi_logo"
            app:layout_constraintTop_toBottomOf="@id/welcome_message"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintVertical_bias="0.0" />

        <TextView
            android:id="@+id/sumsi_welcome_message"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:fontFamily="@font/tt0372m"
            android:gravity="center"
            android:padding="25dp"
            android:text="@string/sumsi_welcome_message"
            android:textSize="16sp"
            app:layout_constraintTop_toBottomOf="@id/sumsi_logo"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <TextView
            android:id="@+id/privacyTv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/info1"
            app:layout_constraintTop_toBottomOf="@id/sumsi_welcome_message"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="20dp"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="8dp"
            android:layout_marginEnd="8dp"
            />

        <TextView
            android:id="@+id/termsTv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/info2"
            app:layout_constraintTop_toBottomOf="@id/sumsi_welcome_message"
            app:layout_constraintStart_toEndOf="@id/privacyTv"
            android:layout_marginStart="20dp"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="8dp"
            android:layout_marginEnd="8dp"
            />

        <TextView
            android:id="@+id/imprintTv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/info3"
            app:layout_constraintTop_toBottomOf="@id/sumsi_welcome_message"
            app:layout_constraintStart_toEndOf="@id/termsTv"
            android:layout_marginStart="20dp"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="8dp"
            android:layout_marginEnd="8dp"
            />

        <TextView
            android:id="@+id/disclaimerTv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/info4"
            app:layout_constraintTop_toBottomOf="@id/privacyTv"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="20dp"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"
            android:layout_marginEnd="8dp"
            />

        <TextView
            android:id="@+id/agbTv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/info5"
            app:layout_constraintTop_toBottomOf="@id/termsTv"
            app:layout_constraintStart_toEndOf="@id/disclaimerTv"
            android:layout_marginStart="90dp"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"
            android:layout_marginEnd="8dp"
            />

        <TextView
            android:id="@+id/CookiePreferncesTv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/info6"
            app:layout_constraintTop_toBottomOf="@id/imprintTv"
            app:layout_constraintStart_toEndOf="@id/agbTv"
            android:layout_marginStart="70dp"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"
            android:layout_marginEnd="8dp"
            />


    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>