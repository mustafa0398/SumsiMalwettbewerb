<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

    <TextView
        android:id="@+id/terms_header"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Teilnahmebedingungen"
        android:textSize="24sp"
        android:layout_marginBottom="30dp"
        />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/terms_header">

        <TextView
            android:id="@+id/terms_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/showTermsAndCondition"
            android:fontFamily="@font/swz721le"
            android:textSize="18sp"
            android:onClick="showTermsAndCondition"
            />
    </ScrollView>

</RelativeLayout>
